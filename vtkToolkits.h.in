#ifndef __vtkToolkits_h
#define __vtkToolkits_h

/* what toolkits was VTK built with */
#cmakedefine VTK_USE_HYBRID
#cmakedefine VTK_USE_PARALLEL
#cmakedefine VTK_USE_PATENTED
#cmakedefine VTK_USE_RENDERING
#cmakedefine VTK_USE_VOLUMEPRO
#cmakedefine VTK_HAVE_VG500
#cmakedefine VTK_HAVE_VP1000

/* what rendering libraries to use */
#cmakedefine OPENGL_LIBRARY
#ifdef OPENGL_LIBRARY
 #ifndef _WIN32
   #define VTK_USE_OGLR 
 #endif
#endif

/* what rendering libraries to use */
#cmakedefine VTK_USE_X
#ifdef VTK_USE_X
 #ifdef _WIN32
   #define VTK_USE_OGLR 
 #endif
#endif

#cmakedefine VTK_OPENGL_HAS_OSMESA

#cmakedefine VTK_USE_MANGLED_MESA 
#ifdef VTK_USE_MANGLED_MESA
 #ifndef _WIN32
   #define VTK_USE_OGLR 
 #endif
#endif

#if defined (VTK_USE_CARBON) || defined(VTK_USE_COCOA)
 #undef VTK_USE_OGLR
#endif

/* use MPI */
#cmakedefine VTK_USE_MPI

#cmakedefine VTK_DISABLE_TK_INIT

/* java awt support */
#cmakedefine JAVA_AWT_INCLUDE_PATH
#ifdef JAVA_AWT_INCLUDE_PATH
  #define VTK_USE_JAWT 
#endif

/* debug leaks */
#cmakedefine VTK_DEBUG_LEAKS

#endif
