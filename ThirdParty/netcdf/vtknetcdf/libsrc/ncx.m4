static void
swapn2b(void *dst, const void *src, size_t nn)
{
        char *op = dst;
        const char *ip = src;

/* unroll the following to reduce loop overhead
 *
 *	while(nn-- != 0)
 *	{
 *		*op++ = *(++ip);
 *		*op++ = *(ip++ -1);
 *	}
 */
        while(nn > 3)
        {
                *op++ = *(++ip);
                *op++ = *(ip++ -1);
                *op++ = *(++ip);
                *op++ = *(ip++ -1);
                *op++ = *(++ip);
                *op++ = *(ip++ -1);
                *op++ = *(++ip);
                *op++ = *(ip++ -1);
                nn -= 4;
        }
        while(nn-- != 0)
        {
                *op++ = *(++ip);
                *op++ = *(ip++ -1);
        }
}

