#
# configure script for vtk source directory
#
AC_INIT(Makefile.in)


if test ! -r targets.make
then
    echo "Copying $srcdir/targets.make to build directory"
    cp $srcdir/targets.make targets.make || exit 1
fi

# option for handling BSD style makefile includes
#
AC_ARG_WITH(bsdmake,
         [  --with-bsdmake            uses bsd style makefile includes],
         MAKEINCLUDE=".include"
         MAKEQUOTE='"',
         MAKEINCLUDE="include"
         MAKEQUOTE='')
AC_ARG_WITH(tcl,
         [  --with-tcl           build vtk the tcl based interpreter],
	 [use_tcl=$withval])
BUILD_PVTK=""
AC_ARG_WITH(mpi,
         [  --with-mpi           create the mpi specific controller],
	 if test "$withval" = yes -a "$use_tcl" = yes; then
	 BUILD_PVTK="build_pvtk"
	 fi,)

AC_SUBST(MAKEINCLUDE)
AC_SUBST(MAKEQUOTE)
AC_SUBST(BUILD_PVTK)

AC_CONFIG_SUBDIRS(python tcl java examplesCxx)

dnl Checks for library functions.
AC_OUTPUT(Makefile)

